#include <bits/stdc++.h>
using namespace std;
#define ll long long
#define vi vector<ll>
#define endl '\n'
#define yes cout << "YES" << endl
#define no cout << "NO" << endl
#ifdef LOCAL
#include "algo/debug.h"
#else
#define debug(...) 42
#endif
const double PI = acos(-1);
const ll MOD = 1e18;

void solve()
{
    // cout << fixed << setprecision(2);  //-1 3 -1 2
    ll n;
    cin >> n;
    vi a(n);
    for (ll i = 0; i < n; i++) cin >> a[i];
    set<ll> s(a.begin(), a.end());
    s.erase(-1);
    if (!s.count(0) && s.size() <= 1) yes;
    else no;
}

int main()
{
    ios::sync_with_stdio(false);
    cin.tie(nullptr);
    ll tstcs;
    cin >> tstcs;
    for (int t = 1; t <= tstcs; t++)
    {
        // cout << "Case " << t << ": ";
        solve();
    }
    return 0;
}
