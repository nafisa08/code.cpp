void solve()
{
    // cout << fixed << setprecision(2);

    ll n;
    cin >> n;
    string a;
    cin >> a;
    ll l = 0, r = n - 1, cnt = n;
    while (a[l] != a[r] && cnt > 0)
    {
        l++;
        r--;
        cnt -= 2;
    }
    cout << cnt << endl;
    // for (ll i = 0; i < n; i++)
    // {
