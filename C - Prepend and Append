    //     {
    //         cnt++;
    //     }

    //     else if (a[i == a[n - i - 1]])
    //         break;
    // }
    // cout << n - cnt << endl;
}

int main()
{
    ios::sync_with_stdio(false);
    cin.tie(nullptr);
    ll tstcs;
    cin >> tstcs;
    for (int t = 1; t <= tstcs; t++)
    {
        // cout << "Case " << t << ": ";
        solve();
    }
    return 0;
}
